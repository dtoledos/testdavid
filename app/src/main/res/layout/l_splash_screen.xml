<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBlack"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_background"
                android:visibility="visible"
                android:contentDescription="@string/app_name"
                android:layout_marginTop="0dp"
                android:clickable="true"
                android:layout_marginStart="0dp"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:src="@drawable/unsplash3"
                 />


            <ImageView
                android:layout_marginTop="60dp"
                android:id="@+id/iv_title"
                android:visibility="visible"
                android:tint="@color/colorWhite"
                android:layout_marginEnd="50dip"
                android:contentDescription="@string/app_name"
                android:layout_marginStart="50dp"
                android:layout_width="wrap_content"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_title"
                />

            <androidx.viewpager.widget.ViewPager
                android:visibility="visible"
                android:layout_marginTop="60dp"
                android:id="@+id/pager_introduction"
                android:layout_below="@+id/iv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

             />

            <!--TextView
                android:layout_marginTop="50dp"
                android:visibility="gone"
                android:textSize="@dimen/text_splash"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/colorWhite"
                /-->

    <RelativeLayout
        android:id="@+id/rl_botones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom|center_vertical"
        android:layout_marginTop="5dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/bt_skip"
            android:visibility="gone"
            tools:visibility="visible"
            android:background="@drawable/btn_splash"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal|center_vertical"
            android:paddingTop="3dp"
            android:foreground="?selectableItemBackground"
            android:paddingBottom="3dp"
            android:text="@string/label_skip"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </RelativeLayout>
</RelativeLayout>